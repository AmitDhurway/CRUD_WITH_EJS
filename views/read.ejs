<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crud_with_Ejs</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="w-full h-full bg-black text-white p-10">
    <a class="text-blue-600" href="/">Go Back Home</a>
    <h1 class="text-xl mt-5 mb-6">All Users</h1>
    <div class="flex flex-wrap gap-3">
      <% if(users.length> 0){ %>
        <% users.forEach(function(user) { %>
          <div class="w-70 h-70 bg-zinc-800 p-2">
            <div class="w-full h-40 bg-red-500">
              <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image">
            </div>
            <h5 class="text-xl mt-2">
              <%= user.name %>
            </h5>
            <h3 class="text-sm text-zinc-500">
              <%= user.email %>
            </h3>
            <div class="flex justify-between mt-2">
              <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit user</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <h3 class="text-zinc-500">No users yet..</h3>
              <% } %>
    </div>
  </div>
</body>

</html>